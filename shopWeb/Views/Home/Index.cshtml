                            <h2 class="section-title--one"><a href="#">@item.productName</a></h2>
                            <p class="mt-30">@item.productSummery </p>
                            <div class="button-box section-space--mt_60">
                                <a href="@Url.Action("ProductDetails","Home",new {id=item.Id})" class="btn btn--md btn--border_1">
                                    @item.pips.OrderBy(p=>p.Price).FirstOrDefault().Price  <i class="icon-arrow-right"></i></a>
