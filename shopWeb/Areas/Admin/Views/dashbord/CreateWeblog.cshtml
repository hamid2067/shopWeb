@model Entities.weblog.Weblog
@using Kendo.Mvc.UI
@using Kendo.Mvc.Extensions
@{
    ViewData["Title"] = "CreateWeblog";
    Layout = "~/Areas/Admin/Views/Shared/_adminThemplate.cshtml";
}
<script src="~/ckeditor/ckeditor.js"></script>
<!-- Basic Inputs start -->
<section id="basic-input" style="width:100%">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">افزودن وبلاگ</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <div class="row">
                            <form class="form col-12" method="post"
                                  action="@Url.Action("CreateWeblog")">
                                  
                                 
                                <input asp-for="Id" type="hidden" />

                                <div class="col-sm-12 col-12 mb-1">


                                    <fieldset class="form-group">
                                        <label asp-for="websummery">  خلاصه توضیحات وبلاگ </label>
                                        <textarea class="form-control" asp-for="websummery" rows="3" placeholder="خلاصه توضیحات وبلاگ "></textarea>
                                    </fieldset>

                                </div>
                                
                                <div class="col-sm-12 col-12 mb-1">
                                    <fieldset class="form-group">
                                        <label asp-for="categoryId">دسته بندی </label>


                                        <select id="categoryId" name="categoryId" class="select2 form-control select2-hidden-accessible" data-select2-id="1" tabindex="-1" aria-hidden="true">

                                            @foreach (var item in ViewBag.group2)
                                            {
                                                <option value="@item.Id" data-select2-id="@item.Id">@item.categoryName</option>
                                            }
                                        </select>





                                    </fieldset>
                                </div>



                                <div class="col-sm-12 col-12 mb-1">
                                    <fieldset class="form-group">
                                        <label asp-for="webdescription">توضیحات تکمیلی</label>
                                      
                                        <textarea class="form-control" asp-for="webdescription" style="width:100%;"></textarea>
                                    </fieldset>

                                     <script>

                                        CKEDITOR.replace("webdescription");
                                   </script>

                                </div>

                              
                                <div class=" flex-center">

                                    <button type="submit" class="btn btn-primary">
                                        <span class="indicator-label">ثبت</span>
                                    </button>
                                </div>

                            </form>


                        </div>
                    </div>
                </div>
            </div>

        </div>
        </div>
</section>
<!-- Basic Inputs end -->



<style>
    .k-grid {
        font-size: 12px;
    }
</style>



